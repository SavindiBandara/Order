<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        android:background="@drawable/sa"

>
    <TextView
            android:text="Order Id"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:layout_width="101dp"
            android:layout_height="44dp"
            android:id="@+id/textView"
            android:textColor="#FFFFFF"
            android:textColorHint="#00CFC0C0" android:autoText="false"
            android:layout_marginTop="75dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"
            android:layout_marginStart="52dp" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toTopOf="@+id/textView2" app:layout_constraintVertical_bias="0.0"/>
    <TextView
            android:text="Item Name"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:layout_width="100dp"
            android:layout_height="39dp"
            android:id="@+id/textView2" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/textView3" android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:ems="10"
            tools:layout_editor_absoluteX="169dp" android:id="@+id/editText2" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/editText3"/>
    <TextView
            android:text="Quantity"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:layout_width="98dp"
            android:layout_height="41dp"
            android:id="@+id/textView3" android:layout_marginBottom="32dp"
            app:layout_constraintBottom_toTopOf="@+id/textView4" android:layout_marginStart="52dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="52dp"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="textPersonName"
            android:text="Name"
            android:textColor="#FFFFFF"
            android:ems="10"
            android:id="@+id/editText3" android:layout_marginBottom="28dp"
            app:layout_constraintBottom_toTopOf="@+id/editText4"
            tools:layout_editor_absoluteX="169dp"/>
    <TextView
            android:text="Amount"
            android:textSize="16dp"
            android:paddingTop="10dp"
            android:textColor="#FFFFFF"
            android:layout_width="103dp"
            android:layout_height="45dp" tools:layout_editor_absoluteY="279dp"
            android:id="@+id/textView4" android:layout_marginStart="52dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginLeft="52dp"/>
    <Button
            android:text="Place order"
            android:layout_width="317dp"
            android:layout_height="37dp"
            android:id="@+id/Button" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" android:layout_marginRight="8dp"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginLeft="8dp"
            android:layout_marginStart="8dp" app:layout_constraintHorizontal_bias="0.73"
            app:layout_constraintVertical_bias="0.598"/>
    <EditText
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:text="ID"
            android:textColor="#FFFFFF"
            android:id="@+id/editText" android:layout_marginBottom="20dp"
            app:layout_constraintBottom_toTopOf="@+id/editText2" app:layout_constraintStart_toEndOf="@+id/textView"
            android:layout_marginStart="16dp" android:layout_marginLeft="16dp"/>
    <EditText
            android:text="Amount"
            android:textColor="#FFFFFF"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:inputType="number"
            android:ems="10"
            android:id="@+id/editText4" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" android:layout_marginBottom="8dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginStart="12dp"
            android:layout_marginLeft="12dp"
            app:layout_constraintVertical_bias="0.404" app:layout_constraintStart_toEndOf="@+id/textView4"/>
</androidx.constraintlayout.widget.ConstraintLayout>